<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/colorGrey" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp"
                android:color="@color/colorGrey"/>
            <size
                android:width="32dp"
                android:height="32dp"/>
        </shape>
    </item>
    <item android:id="@android:id/mask">
        <shape
            android:shape="oval">
            <solid android:color="@color/colorGrey"/>
            <size
                android:width="32dp"
                android:height="32dp"/>
        </shape>
    </item>
</ripple>